public class test {

	public static void main(String[] args) {
		
		// 1 den 10 a kadar olan çift sayıları yazdır 

  //ÖRNEK1
  
		// for(int i=0 ; i<koşul; i++){
	// }
		
		for (int i =1; i<=10; i++ )
		{	
		if(i%2==0)
		{
		System.out.println(i);
			
		}
		}	
	}
}



// ÖRNEK 2
public class testt {

	public static void main(String[] args) {
	
		int toplam = 0; 
		
		for(int i=1;  i<=10; i++ )
			
			// if(i%2==0)
			
			toplam+=i;
			
			System.out.println("sonuc :" +toplam);
	}
}

// ÖRNEK 3
public class testtt {

	public static void main(String[] args) {
		
		for(int i=1; i<=20; i++)
		{	
			if(i%2==0)
		{
		System.out.println("berkan");
	
		}else {
		
		System.out.println(i);
		
	}	
	}
	}
}











